<h1>ユーザー情報編集</h1>
<div class="container">
  <div class="row">
    <div class="mx-auto">
      <%= form_with model: @customer, url: public_customer_path do |f| %>
      <table>
      <tr><th>ユーザー名</th><td><%= f.text_field :name %></td></tr>
      <tr><th>メールアドレス</th><td><%= f.email_field :email %></td></tr>
      <tr><th>紹介文</th><td><%= f.text_area :self_introduction %></td></tr>
      </table>
      <%= f.submit "変更を保存する" %>
      <% end %>
    </div>
  </div>
</div>
