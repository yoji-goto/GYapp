<h1>会員ページ</h1>
<div class="container">
  <div class="row">
    <table class="mx-auto" width="50%">
      <tr><th>ユーザー名</th><td><%= @customer.name %></td></tr>
      <tr><th>メールアドレス</th><td><%= @customer.email %></td></tr>
      <tr><th>紹介文</th><td><%= @customer.self_introduction %></td></tr>
    </table>
  </div>
</div>
<% if current_customer.id == @customer.id %>
<div class="container">
  <div class="row">
    <div class="mx-auto">
      <%= link_to "ユーザー情報を編集する", edit_public_customer_path(current_customer.id) %>
    </div>
  </div>
</div>
<% end %>
